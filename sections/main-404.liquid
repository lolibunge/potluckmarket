{% schema %}
{
  "name": "404 Section",
  "class": "section-404",
  "tag": "section",
  "settings": []
}
{% endschema %}

<div class="px-6 md:px-8">
  <div class="max-w-[1440px] mx-auto grid grid-cols-12">
    <div class="col-span-12 md:col-span-8 md:col-start-3">
      <div class="rte py-[100px] uppercase text-center">
        <h1>Page Not Found</h1>
      </div>
    </div>
    <div class="col-span-12 md:col-span-8 md:col-start-3">
      <div class="rte font-sans text-[18px] md:text-[22px] leading-[120%] mb-[50px] md:mb-[100px]">
        <p>
          We're sorry, but the page you were trying to view does not exist. It might have been removed, had its name
          changed, or is temporarily unavailable.
        </p>
        <p>Please check the URL for mistakes and try again or start your journey from our <a href="/">home page</a>.</p>
      </div>
    </div>
  </div>
</div>
