{% schema %}
{
  "name": "Footer",
  "class": "footer",
  "tag": "footer",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.footer.settings.paragraph"
    }
  ]
}
{% endschema %}

<div class="flex flex-col min-h-[70lvh] lg:min-h-[70vh] py-6 bg-yellow pattern pattern-yellow">
  <div class="mb-auto site-container-fluid pb-[10vw]">
    {% render 'site-logo' %}
  </div>
  <div class="site-container-fluid">
    <div class="grid grid-cols-12 mt-12 gap-y-12 md:gap-12">
      <div class="col-span-12 md:col-span-6">
        <p class="mb-4 text-center md:text-left uppercase type--h2 [text-wrap:pretty]">
          For invitations, updates and all things Potluck ⤵️
        </p>
        <div class="klaviyo-form-UNxYpw"></div>
      </div>
      <div class="flex flex-col col-span-6 md:col-span-3">
        <ul class="mb-12 footer-menu">
          {% for link in linklists['footer-products-menu'].links %}
            <li class="mb-4">
              <a href="{{ link.url }}" class="type--h2">
                {{ link.title | escape }}
              </a>
            </li>
          {% endfor %}
        </ul>
        <div class="mt-auto">
          <div class="flex gap-6 links">
            <a class="w-[45px]" href="https://www.instagram.com/potluckmarket/" target="_blank">
              <div class="svg-wrap">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  height="1em"
                  viewBox="0 0 448 512"
